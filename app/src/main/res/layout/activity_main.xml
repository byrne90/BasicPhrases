<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/doYouSpeakButton"
            android:layout_width="184dp"
            android:onClick="play"
            android:tag="doYouSpeak"
            android:text="Do you speak English?"
            android:textAlignment="center"
            app:layout_columnSpan="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />;

        <Button
            android:id="@+id/goodEavning"
            android:layout_width="wrap_content"
            android:text="Good eavning"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="goodEavning"/>;

        <Button
            android:id="@+id/helloButton"
            android:layout_width="wrap_content"
            android:text="Hello"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="hello"/>;

        <Button
            android:id="@+id/howAreYouButton"
            android:layout_width="wrap_content"
            android:text="How are you?"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="howAreYou"/>;

        <Button
            android:id="@+id/iLiveInButton"
            android:layout_width="wrap_content"
            android:text="I live in"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="iLiveIn"/>;

        <Button
            android:id="@+id/myNameIsButton"
            android:layout_width="wrap_content"
            android:text="My name is"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="myNameIs"/>;

        <Button
            android:id="@+id/pleaseButton"
            android:layout_width="wrap_content"
            android:text="Please"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="please"/>;

        <Button
            android:id="@+id/welcomeButton"
            android:layout_width="wrap_content"
            android:text="Welcome"
            android:onClick="play"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:tag="welcome"/>;


    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>